<div class="container">
    <h1> Welcome</h1>
</div>

<div class="container">
    <% @questions.each do |q| %>
        <div class="media">
            <div class="media-left">
                <a href="#">
                    <img src="<%= q.gravatar %>" class="media-object" style="width:60px min-height=100%">
                </a>
            </div>
            <div class="media-body" style="min-height=100%">
                <h4 class="media-heading"><%= q.email %> asked: </h4>
                <div><%= time_ago_in_words q.created_at %> ago </div>
                <div><%= q.body %></div>
                <div><a href="<%= question_path(q) %>" class="btn btn-success btn-xs"> View Answers </a></div>
            </div>
        </div>
    <% end %>

    <% if @questions.empty? %>
        <div class="alert alert-info"> Nothing here yet, be the first to ask? </div>
    <% end %>
</div>