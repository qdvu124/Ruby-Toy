<div class="modal fade" id="new-answer-modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class ="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">New answer</h4>
            </div>
            <%= form_for :question, url: '/answers', html: { class: 'form-horizontal' } do %>
                <input type="hidden" name="answer[question_id]" value="<%= @question.id %>" />
                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Email:</label>
                        <div class="col-sm-10">
                            <input type="email" name="answer[email]" value="<%= session[:current_user_email] %>" class="form-control" id="email" placeholder="Enter email" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputQuestion" class="control-label col-sm-2">Question</label>
                        <div class="col-sm-10"> 
                            <textarea class="form-control"  name="answer[body]" id="inputQuestion" placeholder="Your answer for this question" style="max-width: 100%" required></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            <% end %>
        </div>
    </div>
</div>
