<div class="container">
    <div class="lead well">
        <div class="media-left">
            <a href="#">
                <img class="media-object" src="<%= @question.gravatar %>">
            </a>
        </div>
        <div class="media-body">
            <h4 class="media-heading"><%= @question.email %> asked: <%= @question.body %></h4>
        </div>
    </div>
    <form><a href="#" class="btn btn-success navbar-btn btn-sm" data-toggle="modal" data-target="#new-answer-modal"> Add an answer </a></form>
    <%= render('home/new_answer_form') %>

    <% @question.answers.each do |answer| %>
        <div class="media">
            <div class="media-left">
                <a href="#">
                    <img class="media-object" src="<%= answer.gravatar %>">
                </a>
            </div>
            <div class="media-body">
                <h4 class="media-heading"><%= answer.email %> answered</h4>
                <div><%= time_ago_in_words answer.created_at %> ago </div>
                <%= answer.body %>
            </div>
        </div>
    <% end %>
</div>